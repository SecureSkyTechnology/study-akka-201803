<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{ISO8601} [%thread] %marker %level %logger - %msg%n</pattern>
    </encoder>
  </appender>

  <root level="${rootLogLevel:-DEBUG}">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>